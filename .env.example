# .env.example
# Copy this to .env and update with your values

# Central Auth Database
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=secure_auth_password_2024
AUTH_DB_PORT=5432
CENTRAL_AUTH_DB_URL=postgresql://auth_user:secure_auth_password_2024@auth-db:5432/auth_central?sslmode=disable

# Long Beach Database  
LONGBEACH_DB_USER=longbeach_user
LONGBEACH_DB_PASSWORD=secure_longbeach_password_2024
LONGBEACH_DB_PORT=5433
LONGBEACH_DB_URL=postgresql://longbeach_user:secure_longbeach_password_2024@longbeach-db:5432/location_longbeach?sslmode=disable

# Bakersfield Database (when ready)
# BAKERSFIELD_DB_USER=bakersfield_user
# BAKERSFIELD_DB_PASSWORD=secure_bakersfield_password_2024
# BAKERSFIELD_DB_PORT=5434
# BAKERSFIELD_DB_URL=postgresql://bakersfield_user:secure_bakersfield_password_2024@bakersfield-db:5432/location_bakersfield?sslmode=disable

# Application Configuration
APP_PORT=8080
GIN_MODE=debug
LOG_LEVEL=info
DEFAULT_TENANT=longbeach

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Cache Configuration
CACHE_TTL_MINUTES=60

# PgAdmin (optional for database management)
PGADMIN_EMAIL=admin@oilgas.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8081

# Test Database Configuration
TEST_DATABASE_URL=postgresql://auth_user:secure_auth_password_2024@localhost:5432/auth_central_test?sslmode=disable
TEST_LONGBEACH_DB_URL=postgresql://longbeach_user:secure_longbeach_password_2024@localhost:5433/location_longbeach_test?sslmode=disable

# Development Database URLs (local development)
DEV_CENTRAL_AUTH_DB_URL=postgresql://auth_user:secure_auth_password_2024@localhost:5432/auth_central?sslmode=disable
DEV_LONGBEACH_DB_URL=postgresql://longbeach_user:secure_longbeach_password_2024@localhost:5433/location_longbeach?sslmode=disable

# Legacy single database URL (DEPRECATED - use specific database URLs above)
# DATABASE_URL=postgresql://user:password@localhost:5432/database_name?sslmode=disable
